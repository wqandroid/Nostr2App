<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="42dp"
                android:layout_margin="12dp"
                app:strokeWidth="1dp"
                android:padding="1dp"
                android:id="@+id/iv_avatar"
                app:strokeColor="@color/md_theme_tertiary"
                app:shapeAppearance="@style/round_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="42dp"/>

            <TextView
                style="@style/TextAppearance.Material3.TitleSmall"
                android:text="Name"
                android:maxWidth="110dp"
                android:lines="1"
                android:maxLength="22"
                android:ellipsize="middle"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_desc"
                app:layout_constraintStart_toEndOf="@id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

               <TextView
                   style="@style/TextAppearance.Material3.BodySmall"
                   android:paddingLeft="3dp"
                   android:drawablePadding="2dp"
                   android:visibility="gone"
                   android:drawableStart="@drawable/svg_nip05_auth"
                   app:layout_constraintBottom_toBottomOf="@id/tv_name"
                   app:layout_constraintTop_toTopOf="@id/tv_name"
                   app:layout_constraintStart_toEndOf="@id/tv_name"
                   android:text="sss@ss"
                   android:id="@+id/tv_nip05"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="@id/iv_avatar"
                app:layout_constraintBottom_toTopOf="@id/tv_name"
                android:id="@+id/tv_desc"
                android:visibility="gone"
                android:maxWidth="110dp"
                android:lines="1"
                android:maxLength="22"
                android:ellipsize="middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <TextView
                android:paddingBottom="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:text="dasdhjashdasjkhdajsk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_avatar"
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:autoLink="all"
                android:textSize="16sp"/>


            <ImageView
                android:background="@color/md_theme_secondaryContainer"
                android:id="@+id/iv_content_img"
                android:visibility="gone"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_time"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="180dp"/>


            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tv_time"
                android:text="12121"
                android:padding="8dp"
                style="@style/TextAppearance.Material3.LabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/iv_more"
                app:tint="@color/md_theme_onTertiaryContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/baseline_disabled_visible_24"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:scaleType="center"
                android:layout_height="wrap_content"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>







</LinearLayout>